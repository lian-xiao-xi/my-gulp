@charset "utf-8";

// 使用 postcss-write-svg 解决高清屏下的1px问题
@svg border-1px {
  height: 2px; 
  @rect {
    fill: var(--color, black); 
    width: 100%; 
    height: 50%; 
  }
} 

border-1px($color)
  border-image: svg(border-1px param(--color $color)) 2 2 stretch;
  border-color: transparent


.borer-blue {
  border-bottom: 1px solid transparent; 
  border-image: svg(border-1px param(--color blue)) 2 2 stretch;
}

// 背景图片
bg-image($url1)
  background-image: url($url1 + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url1 + "@3x.png")

// 文字不换行,超出部分使用...代替
no-wrap()
  text-overflow: ellipsis
  overflow-x: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
